# Q4LIFE ALLEGRO - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values

# =====================================
# DATABASE CONFIGURATION (PostgreSQL)
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=q4life_allegro
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# =====================================
# JWT AUTHENTICATION
# =====================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_change_in_production

# =====================================
# STRIPE PAYMENT INTEGRATION
# =====================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =====================================
# APPLICATION SETTINGS
# =====================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080
API_URL=http://localhost:3000

# =====================================
# EMAIL SERVICE (SendGrid/AWS SES)
# =====================================
# Option 1: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@q4life.com

# Option 2: AWS SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =====================================
# SMS NOTIFICATIONS (Twilio)
# =====================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =====================================
# FILE UPLOADS (AWS S3)
# =====================================
S3_BUCKET_NAME=q4life-business-media
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# =====================================
# SECURITY
# =====================================
ALLOWED_ORIGINS=http://localhost:8080,https://q4life.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# BUSINESS LOGIC CONFIGURATION
# =====================================
# Platform fee percentages by pack level
PLATFORM_FEE_15_STD=10
PLATFORM_FEE_25_STD=12
PLATFORM_FEE_50_STD=15
PLATFORM_FEE_100_STD=18
PLATFORM_FEE_GOLD=20
PLATFORM_FEE_PLATINUM=25

# Commission splits (must total 100%)
PLATFORM_COMMISSION_SHARE=40
AGG_COMMISSION_SHARE=20
AFF_COMMISSION_SHARE=40

# QoL Score thresholds
MIN_QOL_SCORE_CERTIFICATION=300
MIN_QOL_SCORE_15_STD=300
MIN_QOL_SCORE_25_STD=400
MIN_QOL_SCORE_50_STD=500
MIN_QOL_SCORE_100_STD=600
MIN_QOL_SCORE_GOLD=700
MIN_QOL_SCORE_PLATINUM=800

# Mystery shopper evaluation
MYSTERY_SHOPPER_PASSING_SCORE=80
MYSTERY_SHOPPER_FREQUENCY_DAYS=90

# =====================================
# MONITORING & LOGGING
# =====================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# =====================================
# DEPLOYMENT (Production Only)
# =====================================
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://host:port
